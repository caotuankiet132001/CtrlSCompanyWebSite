@model IEnumerable<CtrlS.Models.Video>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link href="~/fontawesome-free-6.1.1-web/fontawesome-free-6.1.1-web/css/all.css" rel="stylesheet">
    <style>
        * {
            font-size: 18px;
        }

        #content {
            height: 150px;
            overflow-y: scroll;
        }
    </style>
</head>
<h2 style="text-align:center; color:darkred; font-weight: bold; margin-top:40px; font-size:40px;">DANH SÁCH VIDEOS </h2>
<p style="margin-left:150px;">
    <i class="fa-solid fa-file-pen">

    </i>
    @Html.ActionLink("Thêm", "Create")

</p>
<div class="table-wrapper" style="margin-top:30px;">
    <table class="table" style="width: 1300px; margin-left: auto; margin-right: auto; table-layout: fixed; word-wrap: break-word;">

        <tr style="background-color:black; color:white;">
            <th>
                Tiêu đề video
            </th>
            <th>
                Nội dung video
            </th>
            <th style="width:20%">
                Link video
            </th>
            <th style="width:20%;">
                Ngày upload
            </th>
            <th style="width:20%;">
                Ngày tổ chức
            </th>
            <th>
                Chức năng
            </th>
            <th width="10%">
                Trạng thái
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tbody>
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        <div id="content">
                            @Html.DisplayFor(modelItem => item.Content)
                        </div>
                    </td>
                    <td>
                        <div id="content">
                            @Html.DisplayFor(modelItem => item.Link)
                        </div>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateDate)
                    </td>
                    <td>
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |*@
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                    <td>
                        @if (item.Status == 0)
                        {
                            <a href="@Url.Action("Status", "Videos", new { @id = item.Id })"
                               class="btn btn-sm btn-warning"
                               style="width:70px;height:30px;stroke:azure;font-size:18px">
                                Off
                            </a>
                        }
                        else if (item.Status == 1)
                        {
                            <a href="@Url.Action("Status", "Videos", new { @id = item.Id })"
                               class="btn btn-sm btn-success"
                               style="width:70px;height:30px;stroke:azure;font-size:18px">
                                On
                            </a>
                        }
                    </td>
                </tr>
            </tbody>
        }

    </table>
</div>