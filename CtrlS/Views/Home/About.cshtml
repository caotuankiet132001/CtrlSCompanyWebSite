                                <div class="item1">
                                    <center><img src="/Content/Image/Talents/@item.ImgName" /></center>
                                </div>
                                <div class="item2">
                                    <h1 style="color:darkred">@Html.DisplayFor(modelitem => item.Role)</h1>
