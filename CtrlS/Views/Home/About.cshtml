            <div class="about">
                <div class="max-width">
                    <img src="~/Content/Image/About/CtrlS-Profile-2.jpg" />
                </div>
            </div>
            <div class="client">
                <div class="max-width">
                    <div class="client_title">
                        <h2>MY CLIENT</h2>
                    </div>
                    <div class="client_content">
                        @foreach (Client item in Model.Clients)
                        {
                            <div class="client_content_item">
                                <div class="item1">
                                    <center><img class="center" src="/Content/Image/Clients/@item.ImgName" /></center>
                                </div>
                                <div class="item2">
                                    <h1>@Html.DisplayFor(modelItem => item.Name)</h1>
                                </div>
                         



                            </div>
                        }
                </div>
            </div>
            <div class="talent">
                <div class="max-width">
