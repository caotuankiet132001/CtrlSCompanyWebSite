@model CtrlS.Models.Blog

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}
<head>
    <style>
        .dl-horizontal
        {
            font-size:15px;
            margin-left:500px;
            margin-top:50px;
        }
        .btn:not(:disabled):not(.disabled) {
            margin-left: 700px;
            margin-top: 10px;
            font-family: 'Varela Round', sans-serif;
            font-size: 15px;
        }

            .btn:not(:disabled):not(.disabled):hover {
                color: white;
                background-color: darkred;
            }
    </style>
</head>
<body>
    <h2 style="text-align:center; color:darkred; font-weight: bold; margin-top:40px; font-size:40px;">XÓA BLOG</h2>

    <div>

        <hr />
        <dl class="dl-horizontal">


            <dt>
                @Html.DisplayName("Tựa đề blog")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt>
                @Html.DisplayName("Nội dung")
            </dt>

            <dd style="width:500px;overflow-y:scroll; height:150px;">
                @Html.DisplayFor(model => model.Content)
            </dd>

            <dt>
                @Html.DisplayName("Hình ảnh")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Img)
            </dd>

            <dt>
                @Html.DisplayName("Ngày tháng")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateTime)
            </dd>

        </dl>
        <input type="submit" value="Delete" class="btn btn-default" />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color" style="margin-left: 550px; font-family: 'Varela Round', sans-serif; font-size:15px;">
                
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
</body>